<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Bootstrap demo</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
</head>
<style>

</style>
<body>
  <% include ./partials/header.ejs %>
    <div class="container py-3">
      <h4 class="mb-4">Feed</h4>
      <p style="margin-top: -22px;">all post from all around the India.</p>
      <hr>
      <div class="feed">
      <% allposts.reverse().forEach(function(post){ %>
        <div class="card m-3 p-2 col-md-6 col-lg-4 col-12 mt-3 col-6" style="width: 18rem;">
          <div class="name">
            <div class="section">
            <div class="a"><img src=" ../images/uploads/<%= post.userid.image %>" class="card-img-top"></div>
            <h5 class="card-title">@<%= post.userid.username %></h5>
          </div>
          </div>
          <div class="card-body p-0">
            <img  src="../images/uploads/<%= post.postimage %>"  style="height: 300px;" class="card-img-top" alt="">
            <p class="card-text mt-3"><%= post.data %></p>
            <p style="font-weight: 600;" class="text-primary">
              <%= post.likes.length %> Likes
            </p>
            <a href="/like/<%= post._id %>"
              class="btn <%= post.likes.indexOf(user.id) === -1 ? 'btn-primary' : 'btn-danger' %>">
              <%= post.likes.indexOf(user.id)===-1 ? "Like" : "Unlike" %>
            </a>
          </div>
        </div>
        <% }) %>
      </div>
    </div>
    <% include ./partials/footer.ejs %>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
        crossorigin="anonymous"></script>
</body>

</html>