<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <link rel="stylesheet" href="../stylesheets/style.css">
    
  </head>
   <style>
    .containera{
      width: 100%;
      height: 100%;
    }
   </style>
  <body>
    <% include ./partials/header.ejs %>
    <form id="uploadpic" method="post" action="/upload" enctype="multipart/form-data">
      <input id="fileinp" type="file" name="image">
    </form>
     <div class="container py-3">
       <div class="d-flex">
         <h4 class="mb-4">Profile</h4>
      </div>
      <div class="flex">
        <div class="parentcircle">
          <div class="pencil"><i class="ri-pencil-line"></i></div>
        <div class="image">
            <img src="../images/uploads/<%= foundUser.image %>" alt="">
          </div>
        </div>
        <div class="details">
          <h4 style="text-transform: capitalize;"><%= foundUser.username %></h4>
          <h6 style="font-weight: 400; margin-top: -5px;"><%=foundUser.Passon %> </h6>
          <a class="link-success link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover" href="/editAccount">Edit account</a>
        </div>
      </div>
      <div class="post mt-4 container-md">
        <h6>Create a new post.</h6>
        <div class="row">
          <div class="col-6">
            <form action="/post" method="post" enctype="multipart/form-data">
              <input hidden id="postimage" type="file" name="postimage">
              <div class="form-floating mt-2 mb-2">
                <textarea name="post" class="form-control" placeholder="Leave a comment here" id="floatingTextarea"></textarea>
                <label for="floatingTextarea">What's on your mind ?</label>
              </div>
              <input id="uploadiamge" type="button" class="btn btn-success" value="Uploadimage">
              <input type="submit" class="btn btn-primary" value="New Post">
            </form>
          </div>
        </div>
      </div>
      <div class="containera mt-4">
        <h6 class="mb-3">All Posts By You.</h6>
        <div class="d-flex row">
        <% foundUser.posts.reverse().forEach(function(post){ %>
          <div class="card m-3 p-2 col-md-6 col-lg-4 col-12" style="width: 18rem;">
            <div class="name">
                <div class="a"><img src=" ../images/uploads/<%= foundUser.image %>" class="card-img-top" alt=""></div>
                <h5 class="card-title"><%= foundUser.username %></h5>
            </div>
            <div class="card-body p-0">
                <img src="../images/uploads/<%= post.postimage %>" class="card-img-top"  style=" height: 300px;" alt="">
                <p class="card-text mt-3"><%= post.data %></p>
                <p style="font-weight: 600;" class="text-primary"><%= post.likes.length %> Likes</p>
                <a href="/like/<%= post._id %>" class="btn <%= post.likes.indexOf(foundUser.id) === -1 ? 'btn-primary' : 'btn-danger' %>"><%= post.likes.indexOf(foundUser.id) === -1 ? "Like" : "Unlike" %></a>
                <a href="/unlike/<%= post._id %>"class="btn btn-warning">Delete post</a>     
            </div>
          </div>
          <% }) %>
        </div> 
      </div>
    </div>
     
     <script>
      document.querySelector(".pencil")
      .addEventListener("click",function(){
        document.querySelector("#fileinp").click();
      })
      document.querySelector("#fileinp")
    .addEventListener("change", function(){
      document.querySelector("#uploadpic").submit();
    })

    document.querySelector("#uploadiamge")
      .addEventListener("click",function(){
        document.querySelector("#postimage").click();
      })
     </script>
     <% include ./partials/footer.ejs %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
  </body>
</html>


  